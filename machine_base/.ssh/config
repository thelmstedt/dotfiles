Host github-work
    HostName github.com
    User git
    IdentityFile ~/.ssh/clarivate_github
    IdentitiesOnly yes
    ControlPath /tmp/ssh-github-work-%C

Host github-personal
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519
    IdentitiesOnly yes
    ControlPath /tmp/ssh-github-personal-%C

Host github.com
    ControlMaster no

Host *
    ControlMaster auto
    ControlPath /tmp/ssh-%C
    ControlPersist 1h
    ServerAliveInterval 300


Include config.d/*
