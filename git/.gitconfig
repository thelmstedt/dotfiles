[user]
	name = Tim Helmstedt
	email = tim.helmstedt@gmail.com
[github]
	user = thelmstedt
[alias]
	# flavours of commit
	c = commit
	cm = commit -m
	cma = commit -a -m
	ammend = commit -a --amend -C HEAD
	
	# shortcuts for commands
	s = status --short
	
	d = diff
	a = add
	co = checkout
	b = branch
		
	p = pull
	pom = pull --rebase origin master
	
[color]
	ui = auto
[credential]
	helper = cache --timeout=3600
[core]
	excludesfile = ~/.gitignore_global
[push]
	default = current
