
[colors]
background = #d0303030
background-transparent = #00303030
background-alt = #c0303030
background-alt-2 = #ff5fafcf
foreground = #eeeeee
foreground-alt = #c1c2c3

red = #fb4934
green = #b8bb26
yellow = #fabd2f
blue = #83a598
purple = #d3869b
aqua = #8ec07c
orange = #fe8019
white = #dddddd

blue_arch = #83afe1

grey = #5b51c9
grey1 = #5bb1c9
grey2 = #5bf1c9

primary = green
secondary = blue
alert = red

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/base]
width = 100%
height = 24
offset-x = 0
offset-y = 0

background = ${colors.background-alt}
foreground = ${colors.foreground}

overline-size = 0
underline-size = 0

border-bottom-size = 0
border-bottom-color = #ffffff

padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1


font-0 = LiberationMono:fontformat=truetype:size=10:antialias=true;2
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=10;2

radius = 0.0
fixed-center = false

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

tray-position = right
tray-padding = 2
tray-background = ${root.background}

separator = "|"

[bar/desktop]
inherit =           bar/base
monitor =           ${env:MONITOR:HDMI-1}
modules-left =      xmonad
modules-center =
modules-right =     spotify eth temperature cpuinfo cpu memory date


[bar/work_r]
inherit =           bar/base
monitor =           ${env:MONITOR:HDMI-1}
modules-left =      xmonad
modules-center =
modules-right =     eth temperature cpuinfo cpu memory date

[bar/work_l]
inherit =           bar/base
monitor =           ${env:MONITOR:DP-0}
modules-left =      xmonad
modules-center =
modules-right =     spotify date

[module/xmonad]
type = custom/script
exec = xmonad-log
tail = true

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
mount-1 = /storage
label-mounted = %{F#5b51c9}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{T2} %{T-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage%% (%percentage-cores%)

[module/memory]
type = internal/memory
interval = 2
format-prefix = "%{T2} %{T-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp24s0
interval = 1
format-connected-underline = ${colors.grey}
format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground}
label-connected =  %downspeed:5%  %upspeed:5%

[module/date]
type = internal/date
interval = 1
date = %a %m/%d
time = %R:%S
label = %date% %time%

;;;;
;;;; Custom
;;;;

[module/spotify]
type =                      custom/script
format-underline =          ${colors.blue}
exec =                      $HOME/.config/polybar/spotify_metadata.sh
interval =                  5
format =                    <label>
label =                     " %output%"

[module/cpuinfo]
type =                      custom/script
format-underline =          ${colors.blue}
exec =                      $HOME/.config/polybar/cpuinfo.sh
interval =                  1
format =                    <label>
label =                     " %output%"
